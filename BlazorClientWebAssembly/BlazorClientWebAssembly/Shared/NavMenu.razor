<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorClientWebAssembly</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Business/CreateBusiness">
                <span class="oi oi-plus" aria-hidden="true"></span> Create Listing
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Business/DisplayBusinessAll">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Display Listings
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Employee/CreateEmployee">
                <span class="oi oi-plus" aria-hidden="true"></span> Add Employee
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Employee/DisplayEmployeeAll">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Display Employees
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Portfolio/CreatePortfolio">
                <span class="oi oi-plus" aria-hidden="true"></span> Add Portfolio
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Portfolio/DisplayPortfolioAll">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Display Portfolios
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
